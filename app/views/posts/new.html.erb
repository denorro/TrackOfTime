<div>
  <h1 class="display-4">
    New Post
    <hr>
  </h1>
</div>

<%= form_for @post do |post| %>
  <div class="form-group">
    <%= post.text_field :date, type: 'date', class: 'form-control', placeholder: 'Enter Date...' %>
  </div>
  <div class="form-group">
    <%= post.text_area :rationale, class: 'form-control', placeholder: 'Rationale...' %>
  </div>
  <%= post.submit 'Submit', class: 'btn btn-success' %>
<% end %>